{
    "name": "vanilo/framework",
    "description": "E-commerce Framework for Laravel",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Attila Fulop",
            "homepage": "https://github.com/fulopattila122"
        }
    ],
    "support": {
        "issues": "https://github.com/vanilophp/framework/issues"
    },
    "require": {
        "php": "^7.2",
        "laravel/framework": "~5.5|~6.0|~7.0",
        "konekt/appshell": "~1.7",
        "spatie/laravel-medialibrary": "^7.3",
        "vanilo/contracts": "~1.2",
        "vanilo/support": "~1.2",
        "vanilo/category": "~1.2",
        "vanilo/product": "~1.2",
        "vanilo/cart": "~1.2",
        "vanilo/checkout": "~1.2",
        "vanilo/order": "~1.2",
        "vanilo/properties": "~1.2",
        "vanilo/channel": "~1.2"
    },
    "autoload": {
        "psr-4": {
            "Vanilo\\Framework\\": "src"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "require-dev": {
        "orchestra/testbench": "~3.5|~4.0|~5.0",
        "phpunit/phpunit" : "6.2 - 7.5|~8.0|~9.0",
        "mockery/mockery": "^1.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Vanilo\\Framework\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
