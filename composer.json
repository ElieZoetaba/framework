{
    "name": "vanilo/framework",
    "description": "E-commerce Framework for Laravel",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Attila Fulop",
            "homepage": "https://github.com/fulopattila122"
        }
    ],
    "support": {
        "issues": "https://github.com/vanilophp/framework/issues"
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "laravel/framework": "^8.22.1",
        "konekt/appshell": "^2.2",
        "konekt/concord": "^1.10",
        "spatie/laravel-medialibrary": "^8.0|^9.0",
        "vanilo/checkout": "^2.2",
        "vanilo/order": "^2.2",
        "vanilo/properties": "^2.2",
        "vanilo/channel": "^2.2",
        "vanilo/payment": "^2.2"
    },
    "replace": {
        "vanilo/contracts": "^2.2 | ^3.0",
        "vanilo/support": "^2.2 | ^3.0",
        "vanilo/product": "^2.2 | ^3.0",
        "vanilo/category": "^2.2 | ^3.0",
        "vanilo/cart": "^2.2 | ^3.0"
    },
    "autoload": {
        "psr-4": {
            "Vanilo\\": "src"
        },
        "files": [
            "src/Framework/Support/helpers.php"
        ]
    },
    "require-dev": {
        "orchestra/testbench": "~6.0",
        "phpunit/phpunit" : "~9.0",
        "laravel/legacy-factories": "^1.0.4"
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.x-dev"
        }
    }
}
